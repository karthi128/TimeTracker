@model IEnumerable<FederalTimeTracker.Models.Salary>

<table id="EmployeeSalary" title="Employee Salary" class="table">
    <thead>
        <tr class="ui-widget-header ">
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalSalary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rate)
            </th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="ui-widget-content">

                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalSalary)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rate)
                </td>
                <td>
                    @Html.ActionLink("X", "Delete", new { id = item.SalaryId }, new { @class = "btn btn-danger btn-xs",@Tooltip="Delete Salary Information" })
                </td>
            </tr>
        }

    </tbody>
</table>
