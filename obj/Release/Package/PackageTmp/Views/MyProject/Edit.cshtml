@model FederalTimeTracker.Models.MyProject

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>MyProject</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.MyProjectId)

        <div class="form-group">
            @Html.LabelFor(model => model.EmployeeEmployeeId, "EmployeeEmployeeId", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("EmployeeEmployeeId", String.Empty)
                @Html.ValidationMessageFor(model => model.EmployeeEmployeeId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ProjectProjectId, "ProjectProjectId", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ProjectProjectId", String.Empty)
                @Html.ValidationMessageFor(model => model.ProjectProjectId)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
